<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="ResourceName">



    <style name="lineDiver">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:dividerHeight">0.5dp</item>
        <item name="android:divider">@color/line</item>
        <item name="android:background">@color/line</item>
    </style>

    <style name="text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">20dp</item>
    </style>
    <style name="text.white">
        <item name="android:textColor">@color/surface</item>
    </style>
    <style name="text.whitealpha">
        <item name="android:textColor">@color/surface_alpha</item>
    </style>
</resources>
