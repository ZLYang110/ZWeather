<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ResourceName">

    <com.zlyandroid.weather.widget.WeatherView
        android:id="@+id/weatherView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.daimajia.swipe.SwipeLayout
        android:id="@+id/sl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:drag_edge="bottom"
        app:show_mode="pull_out">
        <RelativeLayout
            android:id="@+id/rl_reward"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="100dp"
                android:layout_marginRight="60dp"
                android:layout_marginBottom="60dp"
                android:gravity="center"
                android:orientation="vertical">



                <ImageView
                    android:id="@+id/piv_wx_qrcode"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/margin_def"
                    android:layout_marginBottom="@dimen/margin_def"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/weixin"
                    />


            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false">

            <ImageView
                android:id="@+id/civ_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="120dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/head"
                />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/civ_icon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="ZLYang110"
                android:textColor="@color/text_invert"
                android:textSize="@dimen/text_title" />

            <TextView
                android:id="@+id/tv_sign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text=" "
                android:textColor="@color/text_invert"
                android:textSize="@dimen/text_auxiliary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_sign"
                android:layout_marginTop="60dp"
                android:clipChildren="false"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_github"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_press_color_transparent"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/ic_github"
                        app:tint="@color/text_invert" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:text="Github"
                        android:textColor="@color/text_invert"
                        android:textSize="@dimen/text_content" />

                    <TextView
                        android:id="@+id/tv_github"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="@color/text_invert_alpha"
                        android:textSize="@dimen/text_notes"
                        tools:text="https://github.com/goweii" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_csdn"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_press_color_transparent"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp">

                    <TextView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:scaleType="fitCenter"
                        android:text="C"
                        android:gravity="center"
                        android:textColor="@color/text_invert"
                        android:textSize="@dimen/text_content"
                         />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:text="CSDN"
                        android:textColor="@color/text_invert"
                        android:textSize="@dimen/text_content" />

                    <TextView
                        android:id="@+id/tv_csdn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="@color/text_invert_alpha"
                        android:textSize="@dimen/text_notes"
                        tools:text="https://blog.csdn.net/gvvbn" />

                </LinearLayout>


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tv_to_reward"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text=" 我想请作者喝咖啡"
                android:textColor="@color/text_invert_alpha"
                android:textSize="@dimen/text_auxiliary" />

            <TextView
                android:id="@+id/tv_to_reward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/iv_to_reward"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:text="上滑"
                android:textColor="@color/text_invert_alpha"
                android:textSize="@dimen/text_auxiliary" />

            <ImageView
                android:id="@+id/iv_to_reward"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:alpha="0.6"
                android:rotation="90"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_back"
                app:tint="@color/text_invert_alpha" />

        </RelativeLayout>
    </com.daimajia.swipe.SwipeLayout>


    <com.zlylib.titlebarlib.ActionBarCommon
        android:id="@+id/abc"
        style="@style/ActionBar.Common.Back"
        android:background="@color/transparent"
        app:ab_bottomLineHeight="0dp"
        app:ab_bottomLineResId="@color/bar_line"
        app:abc_leftIconColor="@color/white"
        app:abc_titleText="关于作者"
        app:abc_titleTextColor="@color/white" />

</RelativeLayout>