<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="ResourceName">

    <!--当前天气-->
    <LinearLayout
        android:id="@+id/ll_now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="80dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_temp"
                style="@style/text.white"
                android:text=""
                android:layout_marginLeft="10dp"
                android:textSize="90dp" />

            <TextView
                style="@style/text.white"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/tv_temp"
                android:text=" ℃"
                android:textSize="34dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_tempMax"
                style="@style/text.white"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:text="0" />

            <TextView
                style="@style/text.white"
                android:layout_centerHorizontal="true"
                android:text=" / " />

            <TextView
                android:id="@+id/tv_tempMin"
                style="@style/text.whitealpha"
                android:layout_centerHorizontal="true"
                android:text="0" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_text"
            style="@style/text.whitealpha"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="晴" />
    </LinearLayout>

    <!--未来24h-->
    <LinearLayout
        android:id="@+id/ll_view_24h"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_left_20"
            android:layout_marginRight="@dimen/common_left_20"

            android:orientation="horizontal">
            <TextView
                style="@style/text.whitealpha"
                android:alpha="0.4"
                android:textSize="12dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="中国气象"
                />
            <TextView
                android:id="@+id/tv_updataTime"
                style="@style/text.whitealpha"
                android:layout_gravity="right"
                android:layout_alignParentRight="true"
                android:alpha="0.4"
                android:textSize="12dp"
                android:padding="5dp"
                android:text="上次更新时间:16:12"

                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/division_line"
            android:layout_marginLeft="@dimen/common_left_20"
            android:layout_marginRight="@dimen/common_left_20"
            android:alpha="0.2"
            android:background="@color/line" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_24h"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:scrollbars="none"
            tools:itemCount="1"
            tools:layoutmanager="LinearLayoutManager"
            tools:listitem="@layout/item_hour" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/division_line"
            android:layout_marginLeft="@dimen/common_left_20"
            android:layout_marginRight="@dimen/common_right_20"
            android:alpha="0.2"
            android:background="@color/line" />
    </LinearLayout>

    <!--未来7天-->
    <LinearLayout
        android:id="@+id/ll_view_7d"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_7d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:scrollbars="horizontal"
            tools:itemCount="1"
            tools:layoutmanager="LinearLayoutManager"
            tools:listitem="@layout/item_day" />

    </LinearLayout>

    <!--空气质量-->
    <LinearLayout
        android:id="@+id/ll_view_air"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_left_20"
            android:layout_marginRight="@dimen/common_left_20"
            android:layout_marginTop="@dimen/common_edge_15"
            android:orientation="horizontal">
            <TextView
                style="@style/text.white"
                android:alpha="0.8"
                android:textSize="16dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="空气质量"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/division_line"
            android:layout_marginLeft="@dimen/common_left_20"
            android:layout_marginRight="@dimen/common_left_20"
            android:alpha="0.2"
            android:background="@color/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    style="@style/text.white"
                    android:textSize="16dp"
                    android:paddingTop="30dp"
                    android:text="污染指数"
                    />
                <com.zlyandroid.weather.widget.CircleProgress
                    android:id="@+id/cp_air"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_margin="15dp"
                    app:bgArcColor="@color/background_mask"
                    app:bgArcWidth="6dp"
                    app:arcWidth="8dp"
                    app:valueColor="@color/white"
                    app:hint="湿度"
                    app:hintSize="@dimen/sp_14"
                    app:value="0"
                    app:hintColor="@color/white"
                    app:maxAndMinValueColor="@color/white"
                    app:maxValue="300"
                    app:startAngle="125"
                    app:sweepAngle="290"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:orientation="vertical">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_air"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:overScrollMode="never"
                    android:scrollbars="horizontal"
                    tools:itemCount="6"
                    tools:layoutmanager="LinearLayoutManager"
                    tools:listitem="@layout/item_air" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!--日出日落-->
    <LinearLayout
        android:id="@+id/ll_view_sun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_left_20"
            android:layout_marginRight="@dimen/common_left_20"
            android:layout_marginTop="@dimen/common_edge_15"
            android:orientation="horizontal">
            <TextView
                style="@style/text.white"
                android:alpha="0.8"
                android:textSize="16dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="日出日落"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/division_line"
            android:layout_marginLeft="@dimen/common_left_20"
            android:layout_marginRight="@dimen/common_left_20"
            android:alpha="0.2"
            android:background="@color/line" />
        <com.zlyandroid.weather.widget.SunDayView
            android:id="@+id/sunDayView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_edge_20"
            app:lineColor="@color/surface_top_alpha"
            app:timeTextColor="@color/background"
            app:timeTextSize="12dp"
            android:layout_marginLeft="@dimen/common_left_20"
            android:layout_marginRight="@dimen/common_right_20"

            />

    </LinearLayout>

    <!--底部-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_edge_20"
        android:layout_marginBottom="@dimen/common_edge_20"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            style="@style/text.white"
            android:alpha="0.5"
            android:textSize="12dp"
            android:paddingTop="1dp"
            android:paddingBottom="5dp"
            android:text="和风天气"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:alpha="0.2"
            android:layout_marginLeft="@dimen/common_left_5"
            android:layout_marginRight="@dimen/common_right_5"
            android:background="@color/line" />
        <TextView
            style="@style/text.white"
            android:alpha="0.5"
            android:textSize="12dp"
            android:paddingTop="1dp"
            android:paddingBottom="5dp"
            android:text="中国气象"
            />
    </LinearLayout>
</LinearLayout>