<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/common_left_20"
    android:layout_marginRight="@dimen/common_left_20"
    tools:ignore="ResourceName">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="0dp"
        android:gravity="center">

    <TextView
        android:id="@+id/tv_date"
        style="@style/text.whitealpha"
        android:layout_centerVertical="true"
        android:textSize="16dp"
        android:text="2021-01-20"
        />
    <ImageView
        android:id="@+id/iv_w"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="10dp"
        android:src="@mipmap/icon_100d"
        android:layout_centerHorizontal="true"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_tempMax"
            style="@style/text.whitealpha"
            android:textSize="16dp"
            android:text="-5°C"
            />
        <TextView
            style="@style/text.whitealpha"
            android:textSize="16dp"
            android:alpha="0.4"
            android:text=" / "
            />
        <TextView
            android:id="@+id/tv_tempMin"
            style="@style/text.whitealpha"
            android:textSize="16dp"
            android:alpha="0.6"
            android:text="-5°C"
            />
    </LinearLayout>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/division_line"
        android:alpha="0.2"
        android:background="@color/line" />
</LinearLayout>